<resources>

    <style name="BtnBase">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_margin">6dp</item>
    </style>

    <!-- Số -->
    <style name="BtnDark" parent="BtnBase">
        <item name="android:backgroundTint">#333333</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- AC, %, +/- -->
    <style name="BtnGray" parent="BtnBase">
        <item name="android:backgroundTint">#A5A5A5</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Phép toán -->
    <style name="BtnOrange" parent="BtnBase">
        <item name="android:backgroundTint">#FF9F0A</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Số 0 -->
    <style name="BtnZero" parent="BtnDark">
        <item name="android:layout_columnSpan">2</item>
    </style>

</resources>
